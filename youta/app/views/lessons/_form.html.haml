-# locals
-# lesson : to dosplay
-# submit-msg : text on submit button
%div
  = form_for(lesson) do |f|
    %fieldset.form-group.col-xs-4
      = f.label :day_of_week, "曜日"
      = f.select :day_of_week, [['月曜',0],['火曜',1],['水曜',2],['木曜',3],['金曜',4]]

    %fieldset.form-group.col-xs-4
      = f.label :period, "時間"
      = f.select :period, [['1限',1],['2限',2],['3限',3],['4限',4],['5限',5],['6限',6]]

    .col-xs-4

    %fieldset.form-group.col-xs-12
      = f.label :title, "授業名"
      = f.text_field :title

    - unless lesson.new_record?
      %fieldset.form-group.col-xs-12
        = f.label :students_csv, "受講者"
        = link_to '編集する', lesson_students_path(lesson)

      %fieldset.form-group.col-xs-12
        = f.label :tags, "授業内容(タグ)"
        = link_to '編集する', lesson_tags_path(lesson)


    %fieldset.form-group.col-xs-4.col-xs-offset-4.center
      = f.submit submit_msg, class: "btn btn-success"
