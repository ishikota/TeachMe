%li{ id: "question-#{question.id}", class: ["question-row", "list-group-item"] }
  .question-main-info
    - solved_cls = %w{btn btn-xs}
    - solved_cls << (question.solved ? "btn-success" : "btn-warning")
    - solved_txt = question.solved ? "解決済み" : "未解決"
    %span{ class: solved_cls }= solved_txt
    %span.h4.question-title= link_to question.title, lesson_question_path(question.lesson, question)
    .pull-right
      - question.tags.each do |tag|
        %span= link_to(tag.name, tag_link(tag), class: "btn btn-primary btn-sm question-tag")
  .question-sub-info
    %small.text-muted= "#{question.user.name} さんが質問しました"
