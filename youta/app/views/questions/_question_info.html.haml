-# locals
-# question : question to display info
.question-main-info
  = render partial: 'questions/solved_tag', locals: { solved: question.solved?, size: 'xs' }
  %span.h4.question-title= question.title
  .pull-right
    - question.tags.each do |tag|
      = link_to(tag.name, tag_link(tag), class: "btn btn-primary btn-sm question-tag")
.question-subinfo
  %small.text-muted="#{question.user.name} さんが質問しました"
